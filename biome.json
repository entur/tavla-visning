{
  "$schema": "https://biomejs.dev/schemas/2.3.3/schema.json",
  "files": {
    "includes": [
      "./src/**/*.{ts,tsx,js,jsx}",
      "./*.{ts,js}"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  }
}