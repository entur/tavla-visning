  "dependencies": {
    "@entur/icons": "^8.2.0",
    "@entur/loader": "^0.5.35",
    "@entur/tokens": "^3.20.0",
    "@entur/typography": "^2.0.3",
    "@graphql-typed-document-node/core": "^3.2.0",
    "abortcontroller-polyfill": "^1.7.8",
    "clsx": "^2.1.1",
    "lodash": "^4.17.21",
    "nanoid": "^5.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swr": "^2.3.6",
    "whatwg-fetch": "^3.6.20"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.3",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.6.0",
