    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "regenerator-runtime": "^0.14.1",
    "tailwindcss": "^3.4.14",
    "terser": "^5.44.1",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  }
